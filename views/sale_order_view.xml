<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_extra_info" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='detailed_type']" position="after">
                <group>
                    <field name="buy_qty"/>
                    <field name="bonus_qty"/>
                </group>
            </xpath>

            <!-- <xpath expr="//page[@name='public']//group[4]" position="before">
                <group string="Country Group">
                    <group>
                        <field name="county"/>
                    </group>
                    <group>
                        <field name="parent_emp"/>
                    </group>
                </group>
            </xpath> -->

        </field>
    </record>
    <record id="sale_order_line_extra_info__" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                <field name="bonus_qty"/>
            </xpath>    
        </field>
    </record>
    <record id="stock_picking_extra_info__" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='move_ids_without_package']//tree//field[@name='product_uom_qty']" position="before">
                <field name="act_qty"/>
                <field name="bonus_qty"/>
            </xpath>    
        </field>
    </record>
    <record id="account_move_extra_info__" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='invoice_line_ids']//tree//field[@name='name']" position="after">
                <field name="bonus_qty"/>
            </xpath>    
        </field>
    </record>

    <!-- mamun vai - kanban inheritance code -->
    <record id="res_partner_kanban_view_phone" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//ul[1]//li[5]" position="after">
                <li t-if="record.phone.raw_value" class="o_text_overflow"><field name="phone"/></li>
            </xpath>    
        </field>
    </record>
    <!-- mamun vai - kanban inheritance code -->


    <!-- mamun vai - report template inheritance code -->
    <template id="report_saleorder_document_inherit" inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_description']" position="replace">
            <th name="th_description" class="text-start">Products</th>
        </xpath>
        <xpath expr="//th[@name='th_quantity']" position="after">
            <th name="th_bonus_quantity" class="text-end">Bonus Quantity</th>
        </xpath>
        <xpath expr="//td[@name='td_quantity']" position="after">
            <td name="td_bonus_quantity" class="text-end">
                <span t-field="line.product_uom_qty"/>
            </td>
        </xpath>
    </template>
    <!-- mamun vai - report template inheritance code -->

    <!-- report inheritance task -->
    <template id="report_saleorder_document_inherit_task" inherit_id="sale.report_saleorder_document">
        <xpath expr="//th[@name='th_quantity']" position="replace">
            <th name="th_quantity" class="text-end">Quantity - inherited by Suprodip Sarkar</th>
        </xpath>
    </template>

    <!-- kanban view inheritance task -->
    <record id="res_partner_kanban_view_website" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="field[@name='phone']" position="after">
                <field name="website"/>
            </xpath>  
            <xpath expr="//ul[1]//li[5]" position="after">
                <li t-if="record.website.raw_value" class="o_text_overflow"><field name="website"/></li><br/>
            </xpath>    
        </field>
    </record>


</odoo>